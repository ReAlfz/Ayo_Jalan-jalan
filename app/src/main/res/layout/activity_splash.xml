<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".Splash">

    <ImageView
        android:id="@+id/splh_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/logo_plane" />

    <TextView
        android:id="@+id/splh_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cream"
        android:gravity="center"
        android:textColor="#0B132B"
        android:text="Ayo Jalan Jalan"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/splh_img" />
</LinearLayout>